// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DocumentType {
  CPF
  RG
}

model GuestInvite {
  id             String        @id @default(uuid())
  fullName       String        @db.VarChar(120)
  email          String        @db.Citext        // case-insensitive
  phone          String        @db.VarChar(14)   // ex.: 21987654321 (até 14)
  documentType   DocumentType?
  documentNumber String?       @db.VarChar(14)   // CPF/RG sem máscara
  company        String?       @db.VarChar(120)
  jobTitle       String?       @db.VarChar(120)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@unique([email, phone])
  @@index([email])
  @@index([phone])
  @@index([createdAt])
}
